<html>
    <head>
        <title>PollPage</title>
        <link href = "visual.css" rel = "stylesheet" type = "text/css">
    </head>
    <div class = "pollId" id = "pollId">{{pollId}}</div>
    <body>
        <div class = "top">
            <div class = "dropdown-bar">
                <div id="dropdown">
                    <div class = "bar1"></div>
                    <div class = "bar2"></div>
                    <div class = "bar3"></div>
                    <div id="myDropdown" class="dropdown-content">
                        <a href="">Your Charts</a>
                        <a href="/account/profile">Profile</a>
                        <a id="logout">Log Out</a>
                        <script type="text/javascript" src="/script/logout.js"></script>
                    </div>
                </div>
            </div>
            <div class = "title-bar">
                <img src = "/img/VibeCheck_Logo.png" class = "logo">
                <a href = "http://localhost:3000/">
                    VibeCheck
                </a>
            </div>
        </div>
        <div class = "pollId" id = "pollId">{{pollId}}</div>
        <div class = "indexRow">
            <div class = "indexColumn">
                <div class = "centerWrapper">
                    <div class = "justify">{{title}}</div>
                        <canvas id="chart"></canvas> 
                        <form id="vote_form">
                                <div class = "justify">{{#responses}}</div>
                                <div class = "justify"><input type="radio" id="{{id}}" name="vote" value="{{id}}"></div>
                                <div class = "justify">
                                <div class = "justify"><label for="{{id}}">{{text}}</label></div>
                                <div class = "justify">{{/responses}}</div>
                        </form>
                    </div>
                    <div class = "justify"><input type="submit" value="Vote"></div>
                    <script src="https://cdn.jsdelivr.net/npm/chart.js@2.8.0"></script>
                    <script src="/script/poll.js"></script>
                </div>
            </div>
        </div>
        <div class = "bottom">
            <ul>
                <li class = "footer"><a href="">Your Charts</a> | </li>
                <li class = "footer"><a href="/account/profile">Profile</a> | </li>
                <li class = "footer"><a href="/account/updateProfile">Update Profile</a> | </li>
                <li class = "footer"><a id="logout">Log Out</a></li>
            </ul>
        </div>
    </body>
</html>