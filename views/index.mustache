<html>
    <head>
        <title>HomePage</title>
        <link href = "../style/style.css" rel = "stylesheet" type = "text/css">
    </head>
<body>
    <div class = "top">
        <div class = "dropdown-bar">
            <div id="dropdown">
                <div class = "bar1"></div>
                <div class = "bar2"></div>
                <div class = "bar3"></div>
                <div id="myDropdown" class="dropdown-content">
                    <a href="">Your Charts</a>
                    <a href="/account/profile">Profile</a>
                    <a id="logout">Log Out</button>
                    <script type="text/javascript" src="/script/logout.js"></script>
                </div>
            </div>
        </div>
        <div class = "title-bar">
            <img src = "/img/VibeCheck_Logo.png" class = "logo">
            <a href = "http://localhost:3000/">
                VibeCheck
            </a>
        </div>
    </div>
    <div class = "indexRow">
        <div class = "indexColumn">
          <div class = "centerWrapper">
            <div class = "justify">Popular Poll</div>
            <div class = "justify">{{question}}</div>
            <div class = "justify">{{#pollData}}</div>
            <div class = "justify">{{text}} : {{numVotes}}</div>
            <div class = "justify">{{/pollData}}</div>
            <div class = "justify">Votes Total : {{totalVotes}}</div>
          </div>
        </div>
        <div class = "indexColumn vibe">
          <div class = "centerWrapper">
            <div class = "justify">What's the Vibe?</div>
            <div class = "justify"><button type="submit">Ask Away</button></div>
          </div>
        </div>
    </div>
    <div class = "bottom">
        <ul>
            <li class = "footer"><a href="">Your Charts</a></li>
            <li class = "footer"><a href="/account/profile"> Profile</a></li>
            <li class = "footer"><a href="/account/updateProfile"> Update Profile</a></li>
            <li class = "footer"><a id="logout">Log Out</li>
        </ul>
    </div>
</body>
</html>

<script type = "text/javascript" src = "/script/dropdown.js"></script>
