<html>
    <head>
        <title>LoginPage</title>
        <link href = "../style/style.css" rel = "stylesheet" type = "text/css">
    </head>
    <body>
        <div class = "top">
            <div class = "dropdown-bar">
                <div id="dropdown">
                    <div class = "bar1"></div>
                    <div class = "bar2"></div>
                    <div class = "bar3"></div>
                    <div id="myDropdown" class="dropdown-content">
                        <a href="/account/register">Register</a>
                    </div>
                </div>
            </div>
        <div class = "title-bar">
            <img src = "/img/VibeCheck_Logo.png" class = "logo">
                <a href = "http://localhost:3000/">
                    VibeCheck
                </a>
            </div>
        </div>                                                   
        <div class = "sign-in-sign-up heading">
            Log In
            <div class = "loginPage"
                <form id="login_form" class = "loginForm">
                    <input type="text" id="username" name="username" placeholder="Username" required>
                    <input type="password" id="password" name="password" placeholder="Password" required>
                    <input type="submit" value="Log In">
                </form>
            </div>
            <script type="text/javascript" src="/script/login.js"></script>
            Need to Register?
            <div class = "loginPage">
                <form id = "loginForm" method="get" action="/account/register">
                    <button type="submit">Register</button>
                </form>
            <div class = "loginPage">
        </div>
        <div class = "bottom">
            <ul>
                <li class = "footer"><a href="/account/register">Register</a></li>
            </ul>
        </div>
    </body>
</html>
<script type = "text/javascript" src = "/script/dropdown.js"></script>