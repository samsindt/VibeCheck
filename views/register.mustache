<html>
    <head>
        <title>RegisterPage</title>
        <link href = "/style/style.css" rel = "stylesheet" type = "text/css">
        <link href="../style/header.css" rel="stylesheet" type="text/css">
        <link href="../style/footer.css" rel='stylesheet' type="text/css">
    </head>
    <body>
       {{>loggedOutHeader}}
        <div class = "registrationWrapper">                                                      
            <div class = "justify">
                Registration
                <form id="registration_form">
                    <div class = "justify"><input type="text" id="username" name="username" placeholder="Username" required></div>
                    <div class = "justify"><input type="password" id="password" name="password" placeholder="Password" required></div>
                    <div class = "justify"><input type="password" id="confirm_password" name="confirmPassword" placeholder="Confirm password" required></div>
                    <div class = "justify"><input type="text" id="first_name" name="firstname" placeholder="First name" required></div>
                    <div class = "justify"><input type="text" id="last_name" name="lastname" placeholder="Last name" required></div>
                    <div class = "justify"><input type="email" id="email" name="email" placeholder="Email address" required></div>
                    <label for="security_question">Security Question</label>
                    <select name="securityQuestion" id="security_question">
                        {{#securityQuestions}}
                        <option value="{{id}}">{{text}}</option>
                        {{/securityQuestions}}
                    </select>
                    <div class = "justify"><input type="text" id="security_question_answer" name="securityQuestionAnswer"  placeholder="Enter your answer..." required></div>
                    <input type="submit">
                </form>
                <a href="/account/login">Login</a>
            </div>
        </div>
        {{>footer}}
        <script src="/script/register.js" type="text/javascript"></script>
    </body>
</html>